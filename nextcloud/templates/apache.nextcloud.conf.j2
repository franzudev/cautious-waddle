<VirtualHost *:80>
        ServerName  {{ inventory_hostname }}
        Redirect permanent / https://{{ inventory_hostname }}/
</VirtualHost>

<VirtualHost *:443>
  DocumentRoot {{ nextcloud_path }}
  ServerName  {{ inventory_hostname }}

  SSLEngine On
  SSLCertificateFile /etc/apache2/ssl/{{ inventory_hostname }}.pem
  SSLCertificateKeyFile /etc/apache2/ssl/{{ inventory_hostname }}.key

  <Directory {{ nextcloud_path }}/>
    Require all granted
    AllowOverride All
    Options FollowSymLinks MultiViews
    Satisfy Any

    <IfModule mod_dav.c>
      Dav off
    </IfModule>
    <IfModule mod_headers.c>
      Header always set Strict-Transport-Security "max-age=15552000; includeSubDomains; preload"
    </IfModule>
  </Directory>
</VirtualHost>
